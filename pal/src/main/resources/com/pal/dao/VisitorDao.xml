<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pal.dao.VisitorDao">
    <sql id="table">vistor</sql>
    <sql id="selectFields">
    	id, userID, visitorID 
    </sql>
    <!-- 根据状态分页获取所有的商品 -->
    <select id="getVistor" resultType="com.pal.entity.Visitor">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        WHERE
        visitorID=#{visitorID}
        ORDER BY id DESC
        limit #{start},#{limit}
    </select>
    
    <select id="getFans" resultType="com.pal.entity.FollowUser">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        WHERE
        followUserID=#{followUserID}
        ORDER BY id DESC
        limit #{start},#{limit}
    </select>
    
</mapper>
